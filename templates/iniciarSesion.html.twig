{% extends "layout.html.twig" %}
{% block javascript %}
    <script src="templates/js/validarIniciarSesion.js"></script>
{% endblock %}
{% block atributosBody %}onload="validar()"{%endblock%}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4 text-center well">
                <form method= "POST" action="./?action=nuevaSesion">
                    <h1><label> Iniciar Sesion</label></h1><br>
                    <div class="form-group">
                        <h3><label>Usuario</label></h3>
                        <input type="email" class="form-control" id="usr" name="usr" data-validation="email" placeholder="Ingrese mail" required>
                        <div id="xmail" class="hide"><h6 class="text-danger">Ingresa un email valido</h6></div>
  		    </div>
                    <div class="form-group">
    			<h3><label>Password</label></h3>
    			<input type="password" class="form-control" id="contraseña" name="contraseña" placeholder="Password" required>
                    </div>
                    {% if mensaje is defined %}
                        {% if mensaje == 'no_existe' %}
                            <div><p class="text-danger">No existe usuario. Por favor, vuelva a ingresar los datos.</p></div>
                        {% else %}
                            <div><p class="text-danger">Su cuenta no se encuentra activa por el momento.</p></div>
                        {% endif %}
                    {% endif %}
                    <button type="submit" class="btn btn-primary">Ingresar</button>
		</form>
              </div>
	</div>
    </div>
{% endblock %}
{% block atributosFooter %}class="posicionFooter"{% endblock %}