{% extends "layout.html.twig" %}
{% block javascript %}
    <script src="templates/js/validarCrearUsr.js"></script>
{% endblock %}
{% block content %}
    <div class="container">
    	<div class="row">
            <div class="col-md-6 col-md-offset-3 well">
            	<form method= "POST" action="./?action=CrearUsuario" onsubmit="existe_Usr()">
            	    <h1 class="text-center"><label>Ingrese datos del Usuario</label></h1><br>
            	    	<div class="form-group">
                            <label>Email (*):</label>
                            <input type="email" class="form-control" name="emailUs" id="emailUs" placeholder="SoyUnEjemplo@Gmail.com" required>
    			</div>
    			<div class="form-group">
     	 		    <label>UserName (*):</label>
                            <input type="text" class="form-control" maxlength="255" name="nombreUs" id="nombreUs" placeholder="nombre de USUARIO" required>
    			</div>
    			<div class="form-group">
                            <label>UserPassword (*):</label>
                            <input type="password" class="form-control" maxlength="255" name="contraUs" id="contraUs" placeholder="ContraseÃ±a del USUARIO" required>
    			</div>
    			<div class="form-group">
                            <label>Nombre usuario (*):</label>
                            <input type="text" class="form-control" maxlength="255" name="nombreRealUs" id="nombreRealUs" placeholder="nombre real del USUARIO" required>
    			</div>
    			<div class="form-group">
                            <label>Apellido usuario (*):</label>
                            <input type="text" class="form-control" maxlength="30" name="ApellidoUs" id="apellidoUs" placeholder="Apellido del USUARIO" required>
    			</div>
    			<div>
                            <h2>Seleccion el/los roles para este usuario (*)</h2>
                            <label class="checkbox-inline">
                            <input type="checkbox" id=check1 value="3">Pediatra
                            </label>
                            <label class="checkbox-inline">
                            <input type="checkbox" id=check2 value="2">Recepcionista
                            </label>
                            <label class="checkbox-inline">
                            <input type="checkbox" id=check3 value="1">Administrador
                            </label>
    			</div>
    			<br><br>
    			<button type="submit" class="btn btn-primary center-block" onclick="return validarCrearUsuario();">Confirmar</button>
            	</form>
            </div>
	</div>
    </div>
{% endblock %}